@page "/edititem"
@inject HttpClient Http

<h1>Edit Item</h1>

<p>This component demonstrates how an item would look in edit mode.</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add New Item</h5>
        <div class="form-group row">
            <label for="name" class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input @bind-value="@category.Name" type="text" class="form-control" id="name" placeholder="Name" />
            </div>
        </div>
        <div class="form-group row">
            <label for="parentId" class="col-sm-4 col-form-label">Parent Id</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" id="parentId" placeholder="ParentId" @bind-value="@categoryId" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button onclick=@SaveNewCategory(categoryId); type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@code {
    class Category
    {
        public int ID { get; set; }
        public string Name { get; set; }
        public Category Parent { get; set; }
    }

    private int categoryId;

    private Category category { get; set; } = new Category();
    private string postURL;

    /*private async Task SaveNewCategory()
